{
  "title": "Liste des utilisateurs",
  "entity": "user",
  "target": "rh",
  "api": {
    "root": "main_api",
    "url": "rh/user"
  },
  "filter": [
    "name","prenom","sexe","date_naissance","niveau"
  ],
  "fields": [
    {
      "name": "_id",
      "label": "Id",
      "isId": true,
      "readonly": true,
      "type": "string"
    },
    {
      "name": "name",
      "label":"nom",
      "type": "string",
      "required": true
    },
    {
      "name": "fisrtname",
      "label":"Prénom",
      "type": "string",
      "required": true
    },




    {
      "label":"Groupe préféré",
      "name": "group",
      "type": "ref",
      "type_ref":"group",
      "dir_ref": "rh/group",
      "required": true
    },

    {
      "label":"Sexe",
      "name": "sexe",
      "type": "string",
      "control": "list",
      "list_display": "dropdown",
      "list_options": [
        {"label":"Masculin","value":"M"},
        {"label":"Féminin","value":"F"}
      ]
    },

    {
      "label":"Date de naissance",
      "name":"date_naissance",
      "type":"date",
      "required":true
    },
    {
      "label":"Niveau ",
      "name":"niveau",
      "type":"string",

    }






  ]
}
